{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo check",
            "type": "shell",
            "command": "cargo check",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cargo check binary",
            "type": "shell",
            "command": "cargo check --no-default-features --features 'build-binary'",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "cargo test backtrace",
            "type": "shell",
            "command": "RUST_BACKTRACE=1 cargo test",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "cargo test binary",
            "type": "shell",
            "command": "cargo test --no-default-features --features 'build-binary'",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "cargo fmt",
            "type": "shell",
            "command": "cargo fmt",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "cargo build release",
            "type": "shell",
            "command": "cargo build --release",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
